<%= if @type == "image" %>

<style>

html {
    background-image:url('/visualisations/<%= @id %>/display_internal');
    background-repeat:none;
    background-position:center center;
    background-size: cover;
    width:100%;
    height:100%;
}

</style>


<%= elsif @type == "video" %>

<video style="width:100%; height:100%" autoplay loop>
  <source src="'/visualisations/<%= @id %>/display_internal'" />
</video>

<%= end %>
